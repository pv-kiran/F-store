    <section class="home-container buy-product"> 
      <section class="best-products-container">
           <div class="best-products-heading">
              <h4 class="secondery_head">Shop till you drop</h4>
              <h2 class="primary_head">Let's Get Shopping</h2>
              <p class="tertiary_head">The coolest, hottest furniture pieces.</p>
