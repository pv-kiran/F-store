  <section class="navigation-container">
    <nav class="nav-container">
       <i class="fas fa-bars btn-toggler"></i>
       <img src="/images/logo.png" alt="LOGO" class="logo-img">
       <ul class="nav-list">
          <li class="nav-item">
            <a href="/product">PRODUCTS</a>
          </li>
          <li class="nav-item">
            <a href="#">PROFILE</a>
          </li>
          <li class="nav-item">
            <a href="/cart">
              <i class="fas fa-shopping-cart"></i>
            </a>
          </li>
       </ul>
    </nav>    
  </section>
  <section class="home-container">
    <section class="hero">
      <div class="hero-content">
          <h2>The Furniture Place</h2>
          <p>
            Evok is the new stop for online furniture shopping with modern furniture designs catering to customers different styles and needs.  
          </p>
          <button class="btn-shop">SHOP NOW</button>
      </div>
    </section> 
    <section class="hero-img">
      <img src="/images/hero.jpeg" alt="">
    </section>
    <section class="best-products-container">
       <div class="best-products-heading">
          <h4>Trending</h4>
          <h2>The best of the best</h2>
          <p>The coolest, hottest furniture pieces.</p>
       </div>
       <div class="best-products-list">
        {{#each productList}}
          <div class="best-product">
            <div class="card">
               <img src="{{images.[0].secured_url}}" alt="best">
               <p class="price">{{price}}</p>
               <h3 class="product_name">{{productName}}</h3>
            </div>
          </div>
        {{/each}}
       </div>
    </section>
    <section class="signup-letter">
       <h3>
        Sign Up To Our NewsLetter. Receive Exclusive Offers.
       </h3>
       <div>
         <form>
            <input type="text" name="email" id="email" placeholder="Enter your email">
            <button class="btn-submit btn-subscribe">Subscribe</button>
            <p>
              By clicking Sign Up you're confirming that you agree with our Terms and Conditions.
             </p>
         </form>
         
       </div>
    </section>
    <footer> 
      <h1>EVOKE, 2022 All Rights Reserved.</h1>
    </footer>
  </section>